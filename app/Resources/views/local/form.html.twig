{% extends 'layout.html.twig' %}

{% block content %}
    <h1>
        {% if local.id %}
            Modificar local {{ local }}
        {%  else %}
            Nuevo local
        {% endif %}
    </h1>

    {{ form_start(formulario) }}
    {{ form_widget(formulario) }}
    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <button type="submit" id="enviar" name="enviar" class="btn btn-success btn">
                <i class="fa fa-check"></i> Guardar cambios
            </button>

        </div>
    </div>
    {{ form_end(formulario) }}

{% endblock %}
